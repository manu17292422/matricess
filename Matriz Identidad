#include <iostream>
using namespace std;
int main()
{ int f,c,temp;
cout<<"ingrese la cantidad de filas: ";
cin>>f;
cout<<"ingrese la cantidad de columnas: ";
cin>>c;
int num[f][c];
for(int i=0;i<f;i++)
{
    for(int j=0;j<c;j++)
    {
        cout<<"Digite los elementos de la matriz: ";
        cin>>num[i][j];
    }
}
for(int i=0;i<f;i++)
{
    for(int j=0;j<c;j++)
    {
      cout<<num[i][j];
    }
    cout<<endl;
}
for(int i=0;i<f;i++)
{
    for(int j=0;j<c;j++)
    {
        if(i==j)
        {
            num[i][j]=1;
        }
    }
}
for(int i=0;i<f;i++)
{
    for(int j=0;j<c;j++)
    {
        cout<<num[i];
    }
    cout<<endl;
}
return 0;

}
